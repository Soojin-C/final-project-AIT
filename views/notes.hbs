<h2>All Notes</h2> 

<a type="button" class="btn btn-outline-secondary" href="/notes/newNote"> Add a new note </a>

{{#each notes}}
<div id = "notes">
    <div class="card {{this.color}}" style="width: 18rem;">
    <div class="card-body">
        <div class = "{{this.font}}">
            <h5 class="card-title b-titleRestrict">{{this.title}}</h5>
            <p class="card-text t-titleRestrict">{{this.text}}</p>
        </div>
        <a href="/notes/{{this.id}}" class="btn btn-outline-primary">Edit</a>
        <a href="/notes/delete/{{this.id}}" class="btn btn-outline-danger">Delete</a>
    </div>
    </div>
</div>
{{/each}}

<script src="/javascript/titleRestrict.js"></script>
