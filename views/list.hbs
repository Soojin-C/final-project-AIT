<form id = "wrapper" method="POST" action="/lists/save">
	<div class="row align-items-center">
		<div class="col-auto">
			<label for="inputTitle" class="col-form-label">Title:</label>
		</div>
		<div class="col-auto">
			<input name="title" value={{list.title}} type="text" id="inputTitle" class="form-control form-control-sm" required>
		</div>
	</div>
    <div id="items" class="row align-items-center">
        {{#each list.items}}
            <div class="d-flex flex-row">
                <input type="text" id = "item" name="items" value={{this}}>
                <button class="btn btn-danger del">Delete</button>
            </div>
        {{/each}}
	</div>
	<div class="row align-items-center">
        <div class="col-auto">
			<input name="newItem" type="text" id="inputItem" class="form-control form-control-sm">
		</div>
		<div class="col-auto">
			<button id="addItem" class="btn btn-primary">+</button>
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>

<script src="/javascript/main.js"></script>
<script src="/javascript/listEdit.js"></script>