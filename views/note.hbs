{{error}}
<form id = "wrapper" method="POST" action="/notes/save/{{note.id}}">
	<div class="row align-items-center">
		<div class="col-auto">
			<label for="inputTitle" class="col-form-label">Title:</label>
		</div>
		<div class="col-auto">
            <input name="title" value={{note.title}} type="text" id="inputTitle" class="form-control form-control-sm" required>
		</div>

	</div>
	<div class="row align-items-center">
		<textarea name="noteContent" class="form-control" rows="3">{{note.text}}</textarea>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>